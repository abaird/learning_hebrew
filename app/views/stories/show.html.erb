<% content_for :head do %>
  <style>
    .hebrew-story {
      direction: rtl;
      text-align: justify;
      margin-bottom: 2em;
      line-height: 1.8;
      font-size: 24px;
    }
    .verse-hebrew {
      display: inline;
    }
    .english-translation {
      direction: ltr;
      text-align: justify;
      font-size: 1.1em;
      margin-bottom: 2em;
      line-height: 1.8;
    }
    .verse-english {
      display: inline;
    }
    .interlinear table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 1em;
    }
    .interlinear td {
      vertical-align: top;
      border-bottom: 1px solid #ddd;
      padding: 8px 12px;
    }
    .interlinear td.he {
      direction: rtl;
      text-align: right;
      width: 55%;
      font-size: 24px !important;
    }
    .interlinear td.en {
      direction: ltr;
      text-align: left;
      width: 45%;
    }
    .translit {
      font-style: italic;
      color: #555;
      font-size: 16px !important;
    }

    /* Interactive word styles */
    .hebrew-word {
      cursor: pointer;
      padding: 1px 1px;
      font-size: 32px;
      border-radius: 3px;
      transition: background-color 0.15s;
      display: inline-block;
    }

    .hebrew-word:hover {
      background-color: #fef3c7;
    }

    .hebrew-word:active {
      background-color: #fde68a;
    }

    /* Popup styles */
    .word-popup {
      background: white;
      border: 2px solid #3b82f6;
      border-radius: 8px;
      padding: 12px;
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
      z-index: 1000;
      max-width: 350px;
      min-width: 200px;
      cursor: pointer;
    }

    .popup-hebrew {
      font-size: 20pt;
      font-family: "SBL Hebrew", serif;
      direction: rtl;
      margin-bottom: 8px;
      font-weight: bold;
    }

    .popup-gloss {
      font-size: 14pt;
      margin-bottom: 4px;
      line-height: 1.4;
      color: #333;
    }

    .popup-pos {
      font-size: 11pt;
      font-style: italic;
      color: #666;
      margin-top: 4px;
    }

    .popup-not-found {
      color: #dc2626;
      font-size: 12pt;
    }

    /* Collapsible section styles */
    .collapsible-section {
      margin-bottom: 2em;
    }
    .collapsible-header {
      cursor: pointer;
      padding: 12px 16px;
      background-color: #f3f4f6;
      border: 1px solid #d1d5db;
      border-radius: 6px;
      font-weight: 600;
      font-size: 1.25rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      transition: background-color 0.2s;
    }
    .collapsible-header:hover {
      background-color: #e5e7eb;
    }
    .collapsible-header .arrow {
      transition: transform 0.3s;
      font-size: 1.2rem;
    }
    .collapsible-header.active .arrow {
      transform: rotate(90deg);
    }
    .collapsible-content {
      display: none;
      padding: 16px;
      border: 1px solid #d1d5db;
      border-top: none;
      border-radius: 0 0 6px 6px;
    }
    .collapsible-content.active {
      display: block;
    }
  </style>

  <script>
    function toggleCollapsible(id) {
      const content = document.getElementById(id);
      const header = content.previousElementSibling;

      content.classList.toggle('active');
      header.classList.toggle('active');
    }
  </script>
<% end %>

<div class="w-full" data-controller="hebrew-word">
  <div class="flex justify-between items-center mb-6">
    <%= link_to stories_path, class: "text-blue-600 hover:text-blue-800 font-medium" do %>
      ‚Üê Back to Stories
    <% end %>
  </div>

  <div class="story-content bg-white rounded-lg shadow-sm p-8">
    <h2 class="text-center text-2xl font-bold mb-2">üìñ <%= @title %></h2>

    <!-- Hebrew Story Section -->
    <div class="hebrew-story text-3xl font-hebrew">
      <% @verses.each do |verse| %>
        <span class="verse-hebrew">
          <% tokenize_hebrew(verse['text']).each do |token| %>
            <%= token[:prefix] %><span class="hebrew-word"
                  data-word="<%= token[:word] %>"
                  data-action="click->hebrew-word#showDefinition"><%= token[:word] %></span><%= token[:suffix] %>
          <% end %>
        </span>
      <% end %>
    </div>

    <!-- English Translation Section -->
    <div class="collapsible-section">
      <div class="collapsible-header" onclick="toggleCollapsible('english-section')">
        <span>English Translation</span>
        <span class="arrow">‚ñ∂</span>
      </div>
      <div id="english-section" class="collapsible-content">
        <div class="english-translation">
          <% @verses.each do |verse| %>
            <span class="verse-english"><%= verse['translation'] %> </span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Interlinear Table Section -->
    <div class="collapsible-section">
      <div class="collapsible-header" onclick="toggleCollapsible('interlinear-section')">
        <span>Line-by-Line Interlinear</span>
        <span class="arrow">‚ñ∂</span>
      </div>
      <div id="interlinear-section" class="collapsible-content">
        <div class="interlinear">
          <table>
            <% @verses.each do |verse| %>
              <tr>
                <td class="en"><%= verse['translation'] %></td>
                <td class="he text-3xl font-hebrew">
                  <%= verse['text'] %><br>
                  <span class="translit"><%= verse['transliteration'] %></span>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
