<%= form_with(model: word, class: "contents") do |form| %>
  <% if word.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(word.errors.count, "error") %> prohibited this word from being saved:</h2>

      <ul class="list-disc ml-6">
        <% word.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :representation %>
    <%= form.text_field :representation, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": word.errors[:representation].none?, "border-red-400 focus:outline-red-600": word.errors[:representation].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :part_of_speech_category_id, "Part of Speech" %>
    <%= form.collection_select :part_of_speech_category_id, @pos_categories, :id, :name,
      { include_blank: "(not set)", selected: word.part_of_speech_category_id },
      { class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" } %>
  </div>

  <div class="my-5">
    <%= form.label :lexeme_id, "Parent Word (Lexeme)" %>
    <%= form.collection_select :lexeme_id, Word.where(lexeme_id: nil).order(:representation), :id, :representation,
      { include_blank: "(standalone word)", selected: word.lexeme_id },
      { class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full font-hebrew" } %>
    <p class="mt-1 text-sm text-gray-500">Link this word to a parent word if it's a form (conjugation, plural, etc.)</p>
  </div>

  <div class="my-5 border-t pt-5">
    <h3 class="text-lg font-semibold mb-3">Metadata Fields</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= form.label :conjugation, "Conjugation (e.g., 3MS, 1CS)" %>
        <%= form.text_field :conjugation, class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
      </div>

      <div>
        <%= form.label :binyan, "Binyan" %>
        <%= form.select :binyan,
          ['qal', 'niphal', 'piel', 'pual', 'hiphil', 'hophal', 'hitpael'],
          { include_blank: "(not set)" },
          { class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" } %>
      </div>

      <div>
        <%= form.label :aspect, "Aspect/Tense" %>
        <%= form.select :aspect,
          ['perfective', 'imperfective', 'imperative', 'jussive', 'vayyiqtol', 'veqatal', 'infinitive', 'active', 'passive'],
          { include_blank: "(not set)" },
          { class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" } %>
      </div>

      <div>
        <%= form.label :person, "Person (1, 2, 3)" %>
        <%= form.select :person, ['1', '2', '3'],
          { include_blank: "(not set)" },
          { class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" } %>
      </div>

      <div>
        <%= form.label :number, "Number" %>
        <%= form.select :number,
          ['singular', 'plural', 'dual', 'form only plural'],
          { include_blank: "(not set)" },
          { class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" } %>
      </div>

      <div>
        <%= form.label :status, "Status" %>
        <%= form.select :status,
          ['absolute', 'construct', 'determined', 'suffixed'],
          { include_blank: "(not set)" },
          { class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" } %>
      </div>

      <div>
        <%= form.label :root, "Root (3-consonant)" %>
        <%= form.text_field :root, class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full font-hebrew" %>
      </div>

      <div>
        <%= form.label :weakness, "Weakness (e.g., 1-Nun, 3-He)" %>
        <%= form.text_field :weakness, class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
      </div>
    </div>
  </div>

  <div class="my-5">
    <%= form.label :mnemonic %>
    <%= form.textarea :mnemonic, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": word.errors[:mnemonic].none?, "border-red-400 focus:outline-red-600": word.errors[:mnemonic].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :pronunciation_url %>
    <%= form.text_field :pronunciation_url, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": word.errors[:pronunciation_url].none?, "border-red-400 focus:outline-red-600": word.errors[:pronunciation_url].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :picture_url %>
    <%= form.text_field :picture_url, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": word.errors[:picture_url].none?, "border-red-400 focus:outline-red-600": word.errors[:picture_url].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :deck_ids, "Decks", class: "block text-sm font-medium text-gray-700" %>
    <% if defined?(@decks) && @decks.any? %>
      <div class="mt-2 space-y-2">
        <% @decks.each do |deck| %>
          <div class="flex items-center">
            <%= form.check_box :deck_ids, { multiple: true, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" }, deck.id, "" %>
            <%= form.label "deck_ids_#{deck.id}", deck.name, class: "ml-2 text-sm text-gray-900" %>
          </div>
        <% end %>
        <%= form.hidden_field :deck_ids, value: "", multiple: true %>
      </div>
    <% else %>
      <p class="mt-2 text-sm text-gray-500">No decks available</p>
    <% end %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
