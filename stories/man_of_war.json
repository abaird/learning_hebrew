{
  "title": "אִישׁ מִלְחָמָה – A Man of Battle",
  "verses": [
    {
      "text": "וַיְהִי אִישׁ חָזָק בָּעִיר:",
      "translation": "And there was a strong man in the city.",
      "transliteration": "vay-hi ish ha-zaq ba-‘ir"
    },
    {
      "text": "וַיֵּ֫שֶׁב הָאִישׁ שָׁם בַּבֹּ֫קֶר:",
      "translation": "And the man sat there in the morning.",
      "transliteration": "vay-ye-shev ha-’ish sham ba-bo-qer"
    },
    {
      "text": "וַיִּשְׁמַע קוֹל צְבָאוֹת רַבִּים:",
      "translation": "And he heard the sound of many armies (hosts).",
      "transliteration": "vay-yish-ma‘ qol tse-va-’ot rab-bim"
    },
    {
      "text": "בָּאוּ הֵם עַד־פֶּ֫תַח הָעִיר:",
      "translation": "They came up to the entrance of the city.",
      "transliteration": "ba-’u hem ‘ad-pe-tah ha-‘ir"
    },
    {
      "text": "וַיָּ֫קָם הָאִישׁ וַיִּשְׁלַח יָדוֹ:",
      "translation": "And the man stood up and he sent forth his hand.",
      "transliteration": "vay-ya-qam ha-’ish vay-yish-lah ya-do"
    },
    {
      "text": "וַיִּקַּח חֶ֫רֶב וּמָגֵן:",
      "translation": "And he took a sword and a shield.",
      "transliteration": "vay-yiq-qah he-rev u-ma-gen"
    },
    {
      "text": "וַיֵּ֫לֶךְ הָאִישׁ לִקְרָאתָם:",
      "translation": "And the man went to meet them.",
      "transliteration": "vay-ye-lekh ha-’ish liq-ra-’tam"
    },
    {
      "text": "וַיֹּ֫אמֶר הָאִישׁ: אֵין לָכֶם כֹּחַ:",
      "translation": "And the man said: 'You have no strength!'",
      "transliteration": "vay-yo-mer ha-’ish: ’eyn la-khem ko-ah"
    },
    {
      "text": "וַיַּךְ הָאִישׁ אִישׁ אֶחָד מֵהֶם:",
      "translation": "And the man struck one man from among them.",
      "transliteration": "vay-yakh ha-’ish ish ’e-had me-hem"
    },
    {
      "text": "וַיִּפֹּל הָאִישׁ אַ֫רְצָה:",
      "translation": "And the man fell to the ground.",
      "transliteration": "vay-yip-pol ha-’ish ar-tsah"
    },
    {
      "text": "וַיִּפְּלוּ עוֹד רַבִּים מֵהֶם:",
      "translation": "And many more fell from among them.",
      "transliteration": "vay-yip-pe-lu ‘od rab-bim me-hem"
    },
    {
      "text": "וַיִּירָא הַצָּבָא וַיָּ֫שָׁב מֵהָעִיר:",
      "translation": "And the army was afraid and returned from the city.",
      "transliteration": "vay-yi-ra’ ha-tsa-va’ vay-ya-shav me-ha-‘ir"
    },
    {
      "text": "הָאִישׁ חָזָק מְאֹד הָיָה:",
      "translation": "The man was very strong.",
      "transliteration": "ha-’ish ha-zaq me-’od ha-yah"
    }
  ]
}