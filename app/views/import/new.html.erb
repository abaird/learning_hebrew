<div class="w-full max-w-4xl mx-auto">
  <h1 class="font-bold text-4xl mb-6">Import Dictionary</h1>

  <% if local_assigns[:error] %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <strong>Error:</strong> <%= error %>
    </div>
  <% end %>

  <div class="bg-white shadow-md rounded px-8 py-6 mb-4">
    <h2 class="text-xl font-semibold mb-4">Supported Formats</h2>

    <!-- JSON Format -->
    <div class="mb-6">
      <h3 class="text-lg font-semibold mb-2">JSON Format (.json)</h3>
      <p class="text-gray-700 mb-4">Advanced format with metadata and lexeme linking:</p>

      <div class="bg-gray-100 p-4 rounded font-mono text-xs mb-4 overflow-x-auto">
        <pre>[
  {
    "word": "לָמַד",
    "glosses": ["he learned", "he studied"],
    "pos": "Verb",
    "pos_detail": {
      "binyan": "qal",
      "conjugation": "3MS"
    },
    "lesson_introduced": 5
  },
  {
    "word": "לָמַדְתִּי",
    "glosses": ["I learned"],
    "pos": "Verb",
    "lexeme_of_hint": "לָמַד",
    "pos_detail": {
      "binyan": "qal",
      "conjugation": "1CS"
    }
  }
]</pre>
      </div>

      <ul class="list-disc list-inside text-gray-700 space-y-1 text-sm">
        <li><strong>Required:</strong> <code class="bg-gray-200 px-1 rounded">word</code>, <code class="bg-gray-200 px-1 rounded">glosses</code>, <code class="bg-gray-200 px-1 rounded">pos</code></li>
        <li><strong>Optional:</strong> <code class="bg-gray-200 px-1 rounded">pos_detail</code> (binyan, conjugation, number, gender, status, etc.)</li>
        <li><strong>Optional:</strong> <code class="bg-gray-200 px-1 rounded">lexeme_of_hint</code> (links to parent word)</li>
        <li><strong>Optional:</strong> <code class="bg-gray-200 px-1 rounded">lesson_introduced</code>, <code class="bg-gray-200 px-1 rounded">function</code>, <code class="bg-gray-200 px-1 rounded">pos_type</code></li>
      </ul>
    </div>

    <%= form_with url: import_path, method: :post, multipart: true, local: true do |form| %>
      <div class="mb-4">
        <%= form.label :file, "Select Dictionary File (.json)", class: "block text-gray-700 font-bold mb-2" %>
        <%= form.file_field :file,
            accept: ".txt,.json,text/plain,application/json",
            required: true,
            class: "block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none p-2" %>
      </div>

      <div class="flex items-center justify-between">
        <%= form.submit "Import Dictionary",
            class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
        <%= link_to "Cancel", root_path,
            class: "text-gray-600 hover:text-gray-800" %>
      </div>
    <% end %>
  </div>
</div>
