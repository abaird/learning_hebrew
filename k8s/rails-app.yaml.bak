apiVersion: apps/v1
kind: Deployment
metadata:
  name: learning-hebrew-app
  namespace: learning-hebrew
spec:
  replicas: 1
  selector:
    matchLabels:
      app: learning-hebrew-app
  template:
    metadata:
      labels:
        app: learning-hebrew-app
    spec:
      initContainers:
      - name: db-migrate
        image: us-central1-docker.pkg.dev/learning-hebrew-1758491674/learning-hebrew/learning-hebrew:latest
        command: ["bin/rails", "db:migrate"]
        envFrom:
        - configMapRef:
            name: app-config
        env:
        - name: DATABASE_URL
          value: "postgresql://$(POSTGRES_USER):$(POSTGRES_PASSWORD)@$(DATABASE_HOST):5432/$(DATABASE_NAME)"
        - name: POSTGRES_USER
          valueFrom:
            secretKeyRef:
              name: app-secrets
              key: postgres-user
        - name: POSTGRES_PASSWORD
          valueFrom:
            secretKeyRef:
              name: app-secrets
              key: postgres-password
        - name: RAILS_MASTER_KEY
          valueFrom:
            secretKeyRef:
              name: app-secrets
              key: rails-master-key
      containers:
      - name: rails-app
        image: us-central1-docker.pkg.dev/learning-hebrew-1758491674/learning-hebrew/learning-hebrew:latest
        ports:
        - containerPort: 3000
        envFrom:
        - configMapRef:
            name: app-config
        env:
        - name: DATABASE_URL
          value: "postgresql://$(POSTGRES_USER):$(POSTGRES_PASSWORD)@$(DATABASE_HOST):5432/$(DATABASE_NAME)"
        - name: POSTGRES_USER
          valueFrom:
            secretKeyRef:
              name: app-secrets
              key: postgres-user
        - name: POSTGRES_PASSWORD
          valueFrom:
            secretKeyRef:
              name: app-secrets
              key: postgres-password
        - name: RAILS_MASTER_KEY
          valueFrom:
            secretKeyRef:
              name: app-secrets
              key: rails-master-key
        resources:
          requests:
            memory: "256Mi"
            cpu: "100m"
          limits:
            memory: "512Mi"
            cpu: "500m"
        livenessProbe:
          httpGet:
            path: /up
            port: 3000
          initialDelaySeconds: 30
          periodSeconds: 10
        readinessProbe:
          httpGet:
            path: /up
            port: 3000
          initialDelaySeconds: 5
          periodSeconds: 5
---
apiVersion: v1
kind: Service
metadata:
  name: learning-hebrew-service
  namespace: learning-hebrew
spec:
  selector:
    app: learning-hebrew-app
  ports:
    - port: 80
      targetPort: 3000
  type: ClusterIP